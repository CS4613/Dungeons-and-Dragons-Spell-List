<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/spellName"
        android:layout_width="157dp"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:gravity="fill_horizontal"
        android:text="Spell Name"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/keyWords"
        android:layout_width="157dp"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:gravity="fill_horizontal"
        android:text="Keywords"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spellName" />

    <TextView
        android:id="@+id/levelType"
        android:layout_width="157dp"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:gravity="fill_horizontal"
        android:text="Level Type"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyWords" />

    <TextView
        android:id="@+id/components"
        android:layout_width="157dp"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:gravity="fill_horizontal"
        android:text="Components"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelType" />


    <TextView
        android:id="@+id/castingTime"
        android:layout_width="157dp"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:gravity="fill_horizontal"
        android:text="Casting Time"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/components" />

    <TextView
        android:id="@+id/range"
        android:layout_width="157dp"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:gravity="fill_horizontal"
        android:text="Range"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/castingTime" />

    <TextView
        android:id="@+id/description"
        android:layout_width="157dp"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:gravity="fill_horizontal"
        android:text="Description"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/range" />


</androidx.constraintlayout.widget.ConstraintLayout>